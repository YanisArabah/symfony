{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
<style>
    .content-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .content-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="content-wrapper">
    <h1>Liste des Articles</h1>

    {% if article is not empty %}
        <ul>
            {% for art in article %}
                <li>
                    <h2>{{ art.titre }}</h2>
                    <p>{{ art.texte }}</p>
                    <small>Publié le : {{ art.date ? art.date|date('d-m-Y H:i') : 'Date non spécifiée' }}</small>
                </li>
                <hr>
            {% endfor %}
        </ul>
    {% else %}
        <p>Aucun article trouvé.</p>
    {% endif %}
</div>
{% endblock %}
